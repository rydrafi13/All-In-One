# INSTALL PAKET

apt install etcd

# EDIT FILE

vim /etc/default/etcd

# HAPUS SEMUA SCRIPT DAN UBAH SCRIPT

ETCD_NAME="HOSTNAME"
ETCD_DATA_DIR="/var/lib/etcd"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_CLUSTER="HOSTNAME=http://IP_ADDR:2380"
ETCD_INITIAL_ADVERTISE_PEER_URLS="http://IP_ADDR:2380"
ETCD_ADVERTISE_CLIENT_URLS="http://IP_ADDR:2379"
ETCD_LISTEN_PEER_URLS="http://0.0.0.0:2380"
ETCD_LISTEN_CLIENT_URLS="http://IP_ADDR:2379"

# RESTART SERVICE

systemctl enable etcd
systemctl restart etcd
